class Solution {
    public String makeFancyString(String s) {
        int n = s.length();
        StringBuilder res = new StringBuilder();
        res.append(s.charAt(0));
        int freq = 1;
        for(int i=1; i<n; i++){
            if(s.charAt(i) == res.charAt(res.length()-1)){
                freq++;
                if(freq < 3){
                    res.append(s.charAt(i));
                }
            }else{
                res.append(s.charAt(i));
                freq = 1;
            }
        }
        return res.toString();
    }
}
